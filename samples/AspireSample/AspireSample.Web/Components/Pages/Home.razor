@page "/"
@using PocketBase.Blazor
@inject IPocketBase _pb
@inject ILogger<Home> _logger

<h3 class="page-title">Posts</h3>

@if (!string.IsNullOrWhiteSpace(loadError))
{
    <div class="alert alert-warning" role="alert">@loadError</div>
}

@if (posts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped table-hover table-bordered w-100 align-middle">
        <thead class="table-light">
            <tr>
                <th scope="col">Slug</th>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col" class="text-center">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in posts)
            {
                <tr>
                    <td class="text-muted">@p.Slug</td>
                    <td>@p.Title</td>
                    <td>@p.Author</td>
                    <td class="text-center">
                        <span class="badge @(p.IsPublished ? "bg-success" : "bg-secondary")">
                            @(p.IsPublished ? "Published" : "Draft")
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Post>? posts;
    private string? loadError;

    protected override async Task OnInitializedAsync()
    {
        // Authenticate as a user to access protected endpoints
        var authResult = await _pb.Collection("users")
            .AuthWithPasswordAsync("joe.doe@email.com", "GY93nUyXb79B3t9");

        var result = await _pb.Collection("posts").GetListAsync<Post>();

        if (!result.IsSuccess)
        {
            var errorMessages = result.Errors
                .Select(e => e.Message)
                .Where(m => !string.IsNullOrWhiteSpace(m))
                .ToList();

            var joinedErrors = errorMessages.Count > 0
                ? string.Join(" | ", errorMessages)
                : "Unknown error.";

            if (joinedErrors.Contains("API key", StringComparison.OrdinalIgnoreCase))
            {
                loadError = "You are not authorized to view posts. Please sign in with a user that has access.";
                _logger.LogWarning(
                    "Failed to load posts due to missing authorization. Errors: {Errors}",
                    joinedErrors);
            }
            else
            {
                loadError = "Could not load posts right now. Please try again.";
                _logger.LogError(
                    "Failed to load posts from PocketBase. Errors: {Errors}",
                    joinedErrors);
            }

            posts = [];
            return;
        }

        posts = result.Value.Items;

        _logger.LogInformation(
            "Posts query completed successfully. TotalItems={TotalItems}, Page={Page}, PerPage={PerPage}, Returned={Returned}",
            result.Value.TotalItems,
            result.Value.Page,
            result.Value.PerPage,
            posts.Count);

        if (posts.Count == 0)
        {
            _logger.LogWarning(
                "Posts query returned 200 OK with zero items. This can happen when collection rules allow request but filter out records for current auth context.");
        }
    }

    public class Post
    {
        public string Id { get; set; } = null!;
        public string? Slug { get; set; }
        public string? Title { get; set; }
        public string? Author { get; set; }
        public bool IsPublished { get; set; }
    }
}
