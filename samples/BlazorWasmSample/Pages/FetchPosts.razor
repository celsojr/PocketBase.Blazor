@page "/posts"
@using FluentResults
@using PocketBase.Blazor
@using PocketBase.Blazor.Exceptions
@using PocketBase.Blazor.Models
@using System.Text.Json
@using System.Globalization
@using System.Text.Json.Serialization
@using PocketBase.Blazor.Options

<h3 class="page-title">Posts</h3>

@if (error != null)
{
    <div class="alert alert-danger">@error</div>
}
@if (posts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="posts-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var p in posts)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Title</td>
                <td>@p.Slug</td>
                <td>@(p.IsPublished ? "Published" : "Draft")</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private string? error;
    private List<Post>? posts;

    protected override async Task OnInitializedAsync()
    {
        // is_published in PB is snake_case, so we do need to set the naming policy
        var options = new PocketBaseOptions();
        options.JsonSerializerOptions.PropertyNamingPolicy = JsonNamingPolicy.SnakeCaseLower;

        // Registering the client with the PocketBase URL
        var pb = new PocketBase("http://localhost:8090", options: options);

        // Or pb.Admin.AuthWithPasswordAsync(...) for admin auth
        var authResult = await pb.Collection("users")
            .AuthWithPasswordAsync("user_tester@email.com", "Nyp9wiGaAC4qGWz");

        Console.WriteLine($"Auth result: {authResult.IsSuccess}");
        Console.WriteLine($"Auth result Token: {authResult.Value.Token}");
        Console.WriteLine($"Auth result Record ID: {authResult.Value.Record?.Id}");

        // Fetch all posts like JS SDK style
        var result = await pb.Collection("posts").GetListAsync<Post>();

        if (result.IsSuccess)
        {
            posts = result.Value.Items;
        }
        else
        {
            // Handle errors
            foreach (var item in result.Errors.OfType<ExceptionalError>())
            {
                if (item.Exception is PocketBaseException pbEx)
                {
                    var errorContent = JsonSerializer.Deserialize<PbError>(pbEx.Message,
                        new JsonSerializerOptions
                        {
                            PropertyNameCaseInsensitive = true
                        });
                    error = $"PokectBase error {(int)pbEx.Status}: {errorContent?.Message}";
                }
            }

            posts = new List<Post>(); // Keep UI stable
        }

        // Logout
        pb.AuthStore.Clear();
    }

    public class Post
    {
        public string Id { get; init; } = null!;
        public string? Title { get; init; }
        public string? Slug { get; init; }
        public string? Content { get; init; }
        public string? Author { get; init; }
        public bool IsPublished { get; init; }
        public DateTime? Created { get; init; }
    }

    public class PbError
    {
        [JsonPropertyName("message")]
        public string Message { get; init; } = null!;

        [JsonPropertyName("status")]
        public int Status { get; init; }

        [JsonPropertyName("data")]
        public JsonElement? Data { get; init; }
    }
 }

